@model IEnumerable<ApiEmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row p-3">
        @foreach (var employee in Model)
        {
            <div class="col-8 col-md-6 col-lg-3 mb-4" >
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@employee.EmployeeName</h5>
                    </div>
                </div>
                <div>
                    <a asp-action="EmployeeDetail" class="btn btn-success form-control mt-2" asp-route-employeeId="@employee.Id">
                        <strong>Employee details</strong>
                    </a>
                </div>
            </div>
        }
    </div>
</div>



