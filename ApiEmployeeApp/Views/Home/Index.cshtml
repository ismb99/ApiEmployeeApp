@model IEnumerable<ApiEmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container my-5">
    <div class="shadow-4 rounded-5 overflow-hidden">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Salary</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQYlTkdbUaO-sZN85l3s7VNQisbAyogrzgAmg&usqp=CAU"
                                 alt=""
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@emp.EmployeeName</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-bold mb-1">@emp.EmployeeAge</p>
                        </td>

                        <td>@emp.EmployeeSalary.ToString("C")</td>
                        <td>
                            <a asp-action="EmployeeDetail" class="btn btn-success form-control mt-2" asp-route-employeeId="@emp.Id">
                                <strong>Employee details</strong>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>